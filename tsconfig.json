{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "types": ["node", "vitest/globals"],
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/__tests__/**/*"]
}
